<div class="max-w-md mx-auto mt-8">
  <h1 class="text-2xl font-bold mb-4">Shorten URL</h1>
  
  <%= form_with(model: @url, local: true, class: "space-y-4") do |f| %>
    <% if @url.errors.any? %>
      <div class="bg-red-100 p-4 rounded">
        <h2 class="text-red-700"><%= pluralize(@url.errors.count, "error") %> prohibited this URL from being saved:</h2>
        <ul class="list-disc pl-5">
          <% @url.errors.full_messages.each do |msg| %>
            <li class="text-red-600"><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
    <div>
      <%= f.label :long_url, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :long_url, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>
    
    <%= f.submit "Shorten URL", class: "w-full py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  <% end %>
</div>